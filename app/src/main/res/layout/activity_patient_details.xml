<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".PatientDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textColor="#FF6C02"
            android:fontFamily="@font/maven_pro_medium"
            android:textStyle="bold"
            android:text="Please Provide Booking Details"
            android:textSize="20dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Slot: "
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radio_morning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/radio_noon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noon"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/radio_evening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:textSize="12sp"/>

        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Doctor Name You Are Registering For"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:id="@+id/register_doctor_name"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Full Name"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:id="@+id/patient_name"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Age"
            android:textSize="15sp"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:id="@+id/patient_age"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Gender"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:id="@+id/patient_gender"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Phone No"
            android:textSize="15sp"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:id="@+id/patient_phone_number"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Full Address"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:id="@+id/patient_address"
            />

        <EditText
            android:id="@+id/appointment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Pick Your Appointment Date(dd-mm-yy)"
            android:textSize="15sp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:id="@+id/pick_appointment_date"
            android:text="Pick Date"
            android:onClick="btn_pickDate"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <Button
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="c o n f i r m    b o o k i n g"
            android:textAlignment="center"
            android:fontFamily="@font/maven_pro_medium"
            android:textSize="13sp"
            android:background="@drawable/round_btn"
            android:textColor="#FF6C02"
            android:id="@+id/confirm_bkng_btn"
            />

    </LinearLayout>

</ScrollView>

